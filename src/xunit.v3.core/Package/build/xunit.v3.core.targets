<?xml version="1.0" encoding="utf-8"?>
<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

  <UsingTask
      AssemblyFile="$(MSBuildThisFileDirectory)..\_content\xunit.v3.core.buildtasks.dll"
      TaskName="Xunit.v3.Core.BuildTasks.XunitGenerateEntryPoint"/>

  <PropertyGroup>
    <DebugSymbols Condition=" '$(DebugSymbols)' == '' ">true</DebugSymbols>
    <OutputType>Exe</OutputType>
  </PropertyGroup>

  <!-- Make sure we generate the PDB type that TPv1 and TPv2 expect -->
  <Choose>
    <When Condition=" '$(TargetFramworkIdentifier)' == '.NETFramework' ">
      <PropertyGroup>
        <AutoGenerateBindingRedirects Condition=" '$(AutoGenerateBindingRedirects)' == '' ">true</AutoGenerateBindingRedirects>
        <DebugType Condition=" '$(DebugType)' == '' ">full</DebugType>
        <GenerateBindingRedirectsOutputType Condition=" '$(GenerateBindingRedirectsOutputType)' == '' ">true</GenerateBindingRedirectsOutputType>
      </PropertyGroup>
    </When>
    <Otherwise>
      <PropertyGroup>
        <DebugType Condition=" '$(DebugType)' == '' ">portable</DebugType>
      </PropertyGroup>
    </Otherwise>
  </Choose>

  <!-- Generate the entry point -->
  <ItemGroup>
    <XunitGeneratedFilePath Include="$(IntermediateOutputPath)XunitGeneratedEntryPoint.cs" Condition=" '$(Language)' == 'C#' "/>
    <XunitGeneratedFilePath Include="$(IntermediateOutputPath)XunitGeneratedEntryPoint.fs" Condition=" '$(Language)' == 'F#' "/>
    <XunitGeneratedFilePath Include="$(IntermediateOutputPath)XunitGeneratedEntryPoint.vb" Condition=" '$(Language)' == 'VB' "/>
  </ItemGroup>

  <Target
      Name="_XunitGenerateEntryPoint"
      BeforeTargets="CoreCompile"
      Outputs="@(XunitGeneratedFilePath)">
    <XunitGenerateEntryPoint
        GeneratedFileName="@(XunitGeneratedFilePath)"
        Language="$(Language)"
        TestingPlatformBuilderHooks="@(TestingPlatformBuilderHook)"/>
    <ItemGroup>
      <Compile Include="@(XunitGeneratedFilePath)" Visible="false" Condition=" '$(Language)' != 'F#' " />
      <CompileAfter Include="@(XunitGeneratedFilePath)" Visible="false" Condition=" '$(Language)' == 'F#' " />
      <FileWrites Include="@(XunitGeneratedFilePath)" />
    </ItemGroup>
  </Target>

</Project>
