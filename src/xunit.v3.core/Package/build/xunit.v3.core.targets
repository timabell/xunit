<?xml version="1.0" encoding="utf-8"?>
<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

  <PropertyGroup>
    <DebugSymbols Condition=" '$(DebugSymbols)' == '' ">true</DebugSymbols>
    <OutputType>Exe</OutputType>
  </PropertyGroup>

  <!-- Make sure we generate the PDB type that TPv1 and TPv2 expect -->
  <Choose>
    <When Condition=" '$(TargetFramworkIdentifier)' == '.NETFramework' ">
      <PropertyGroup>
        <AutoGenerateBindingRedirects Condition=" '$(AutoGenerateBindingRedirects)' == '' ">true</AutoGenerateBindingRedirects>
        <DebugType Condition=" '$(DebugType)' == '' ">full</DebugType>
        <GenerateBindingRedirectsOutputType Condition=" '$(GenerateBindingRedirectsOutputType)' == '' ">true</GenerateBindingRedirectsOutputType>
      </PropertyGroup>
    </When>
    <Otherwise>
      <PropertyGroup>
        <DebugType Condition=" '$(DebugType)' == '' ">portable</DebugType>
      </PropertyGroup>
    </Otherwise>
  </Choose>

  <!-- Attach the entry point -->
  <ItemGroup Condition=" '$(XunitAutoGeneratedEntryPoint)' != 'false' ">
    <Compile      Include="$(MSBuildThisFileDirectory)..\_content\EntryPoint-mtp.cs"   Visible="false" Condition=" '$(Language)' == 'C#' AND '$(UseMicrosoftTestingPlatformRunner)' == 'true' " />
    <Compile      Include="$(MSBuildThisFileDirectory)..\_content\EntryPoint-xunit.cs" Visible="false" Condition=" '$(Language)' == 'C#' AND '$(UseMicrosoftTestingPlatformRunner)' != 'true' " />
    <CompileAfter Include="$(MSBuildThisFileDirectory)..\_content\EntryPoint-mtp.fs"   Visible="false" Condition=" '$(Language)' == 'F#' AND '$(UseMicrosoftTestingPlatformRunner)' == 'true' " />
    <CompileAfter Include="$(MSBuildThisFileDirectory)..\_content\EntryPoint-xunit.fs" Visible="false" Condition=" '$(Language)' == 'F#' AND '$(UseMicrosoftTestingPlatformRunner)' != 'true' " />
    <Compile      Include="$(MSBuildThisFileDirectory)..\_content\EntryPoint-mtp.vb"   Visible="false" Condition=" '$(Language)' == 'VB' AND '$(UseMicrosoftTestingPlatformRunner)' == 'true' " />
    <Compile      Include="$(MSBuildThisFileDirectory)..\_content\EntryPoint-xunit.vb" Visible="false" Condition=" '$(Language)' == 'VB' AND '$(UseMicrosoftTestingPlatformRunner)' != 'true' " />
  </ItemGroup>

</Project>
